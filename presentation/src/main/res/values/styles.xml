<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DarkToolbarText" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LightToolbarText" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@color/textColorPrimaryInverse</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyle">
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="TextStyle.Small">
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="TextStyle.Medium">
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="TextStyle.Medium.Inverse">
        <item name="android:textColor">@color/textColorPrimaryInverse</item>
    </style>

    <style name="TextStyle.Large">
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="TextStyle.Large.Inverse">
        <item name="android:textColor">@color/textColorPrimaryInverse</item>
    </style>

    <style name="TextStyle.XLarge">
        <item name="android:textSize">@dimen/text_xlarge</item>
    </style>

    <style name="TextStyle.XLarge.Inverse">
        <item name="android:textColor">@color/textColorPrimaryInverse</item>
    </style>

</resources>
